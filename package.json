{
  "name": "tuniv",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev:backend": "python -m uvicorn backend.main:app --reload --port 8000",
    "dev:frontend": "bun run --cwd frontend dev -- --host 0.0.0.0 --port 5173",
    "dev:client": "bun run --cwd client dev -- --host 0.0.0.0 --port 5176",
    "dev": "concurrently -n backend,client -c green,blue \"bun run dev:backend\" \"bun run dev:client\"",
    "build": "bun run --cwd frontend build",
    "build:client": "bun run --cwd client build",
    "predeploy": "bun run build",
    "deploy": "gh-pages -d frontend/dist -b gh-pages"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.2.1",
    "gh-pages": "^6.3.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
